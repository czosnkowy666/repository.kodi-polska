<?xml version='1.0' encoding='utf-8'?>
<addons>
  <addon id="plugin.video.kodi-polska-tvp" name="Kodi Polska TVP" version="0.0.3" provider-name="garlic666">
    <requires>
      <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <language>pl</language>
      <license>Apache2</license>
      <forum>https://github.com/czosnkowy666/plugin.video.kodi-polska-tvp/issues</forum>
      <source>https://github.com/czosnkowy666/plugin.video.kodi-polska-tvp</source>
      <website>https://github.com/czosnkowy666/plugin.video.kodi-polska-tvp/wiki</website>
      <summary lang="en_GB">Watch videos on demand from the TVP.</summary>
      <description lang="en_GB">Watch videos on demand from the TVP.</description>
      <disclaimer lang="en_GB">This add-on is not supported by any broadcaster and is therefore unofficial.</disclaimer>
      <summary lang="pl_PL">Oglądaj materiały wideo z TVP.</summary>
      <description lang="pl_PL">Oglądaj materiały wideo z TVP.</description>
      <disclaimer lang="pl_PL">Ten dodatek nie jest obsługiwany przez żadnego nadawcę i dlatego jest nieoficjalny.</disclaimer>
      <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
      </assets>
    </extension>
  </addon>
  <addon id="webinterface.kodi-polska.music-player" name="Kodi Polska Music Web Player" version="0.0.1" provider-name="garlic666">
    <requires>
      <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <language>en</language>
      <license>Apache2</license>
      <forum>https://github.com/czosnkowy666/webinterface.kodi-polska.music-player/issues</forum>
      <source>https://github.com/czosnkowy666/webinterface.kodi-polska.music-player</source>
      <website>https://github.com/czosnkowy666/webinterface.kodi-polska.music-player/wiki</website>
      <summary lang="en_GB">Simple Kodi Music Web UI</summary>
      <description lang="en_GB">Browse and play Kodi's music library from a browser</description>
    </extension>
    <extension point="xbmc.webinterface" library="resources/web/index.html">
      <provides>webinterface</provides>
    </extension>
  </addon>
</addons>